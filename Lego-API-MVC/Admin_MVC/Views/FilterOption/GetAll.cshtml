
@{

    ViewData["Title"] = "All FilterOption";
}

@model IQueryable<Models.Models.FilterOption>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@ViewBag.Title</h4>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Filter Option name </th>
                            <th> Filter ID </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var i = 1;}
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@i</td>
                                <td>@item.Name</td>
                                <td>
                                    @*@(ViewBag.Filter).FirstOrDefault(f=>f.Id==@item.FilterId).Name*@
                                    @{
                                        var str = "";
                                        if (item.FilterId != null) { str = (ViewBag.Filter as List<Models.Models.Filter>).FirstOrDefault(f => f.Id == item.FilterId).Name; }
                                        else { str = "Null"; }
                                     }
                                 @str
                                </td>


                                <td><a asp-controller="FilterOption" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a></td>
                                <td><a asp-controller="FilterOption" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                                @*<td><a asp-controller="FilterOption" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a></td>*@
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>