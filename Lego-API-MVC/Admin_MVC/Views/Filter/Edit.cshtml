
@{
    ViewBag.Title = "Edit Filter";
}

@model ViewModels.FilterVM




<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@ViewBag.Title</h4>
            <form class="forms-sample" asp-controller="Filter" asp-action="Edit" method="post">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name_Ar">Name_Ar</label>
                    <input asp-for="Name_Ar" type="text" class="form-control" placeholder="الاسم">
                    <span class="text-danger" asp-validation-for="Name_Ar"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Save</button>
                <a asp-controller="Filter" asp-action="GetAll" class="btn btn-dark">Cancel</a>
            </form>
        </div>
    </div>
</div>