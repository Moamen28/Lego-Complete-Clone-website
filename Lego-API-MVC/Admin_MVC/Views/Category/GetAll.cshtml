<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@ViewBag.Title</h4>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Category name </th>
                            <th> Sup Category </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var i = 1;}
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@i</td>
                                <td>@item.CatName</td>
                                <td>
                                    @{
                                        var str="";
                                        if (item.SuppCatId != null) { str = Model.FirstOrDefault(c => c.Id == item.SuppCatId).CatName; }
                                        else {  str = "Null"; }
                                    }
                                    @str
                                </td>

                                <td><a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a></td>
                                <td><a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                                @*<td><a asp-controller="Category" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a></td>*@
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





