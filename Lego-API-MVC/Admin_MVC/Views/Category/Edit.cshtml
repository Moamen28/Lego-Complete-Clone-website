<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@ViewBag.Title</h4>
            <form class="forms-sample" asp-controller="Category" asp-action="Edit" method="post">
                <div class="form-group">
                    <label asp-for="Name">Category Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CatName_Ar">Category Name Ar</label>
                    <input asp-for="CatName_Ar" type="text" class="form-control" placeholder="اسم التصنيف">
                    <span class="text-danger" asp-validation-for="CatName_Ar"></span>
                </div>
                <div>
                    <label asp-for="SubID">Sup Category ID</label>
                    <select asp-for="SubID" asp-items="@(SelectList)ViewBag.CategoryList">
                        <option value="Null">Choose Sub Category</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Save</button>
                <a asp-controller="Category" asp-action="GetAll" class="btn btn-dark">Cancel</a>
            </form>
        </div>
    </div>
</div>